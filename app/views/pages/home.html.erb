<h1 class="center">Welcome to Codercred!</h1>

<div class="row">
  <div class="col-md-6">
    <h3 class="center">Recent Achievements:</h3>
    <hr>

    <ul>
      <% @recent_achievements.each do |achievement| %>
        <%= render "modals/achievement_show", achievement: achievement %>

        <li>
          <h3>
            <a id="show-achievement-toggler" data-toggle="modal" data-target="#showAchievement-<%= achievement.id %>"><%= achievement.title %></a>

            <% if achievement.community? %>
              <label class="label label-info">Community</label>
            <% elsif achievement.content? %>
              <label class="label label-success">Content</label>
            <% end %>

            by <%= link_to achievement.user.name, user_path(achievement.user.username) %>
          <h3>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="col-md-6">
    <h3>Achievements Leaderboard:</h3>
    <ul>
      <% @achievement_leaderboard_users.each do |user| %>
        <li>
          <h3>
            <%= link_to user_path(user.username) do %>
              <b><%= user.points %></b>: <%= user.name %>
              <% end %>
          </h3>
        </li>
      <% end %>
    </ul>
  </div>
</div>
