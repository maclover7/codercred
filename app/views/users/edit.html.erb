<h1>Edit Profile</h1>

<%= form_for @user, url: update_user_path(@user.github_username) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :facebook_username %>
    <%= f.text_field :facebook_username, placeholder: 'Example: johnsmith123 (comes from https://facebook.com/johnsmith123)', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :twitter_username %>
    <%= f.text_field :twitter_username, placeholder: 'Example: johnsmith123 (comes from https://twitter.com/johnsmith123)', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
