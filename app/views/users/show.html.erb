<div class="center">
  <h1>
    <%= @user.name %>
    <% if current_user && current_user.id == @user.id %>
      <button type="button" class="btn btn-primary btn-lg" id="new-achievement-toggler" data-toggle="modal" data-target="#newAchievement">
        <span class="glyphicon glyphicon-plus"></span> New Achievement
      </button>
    <% end %>
    <br>

    <small><%= @user.points %> Codercred Points</small>

    <br>
    <% if !@user.facebook_username.nil? %>
      <%= link_to "https://facebook.com/#{@user.twitter_username}" do %>
        <i class="fa fa-facebook"></i>
      <% end %>
    <% end %>

    <% if !@user.twitter_username.nil? %>
      <%= link_to "https://twitter.com/#{@user.twitter_username}" do %>
        <i class="fa fa-twitter"></i>
      <% end %>
    <% end %>
  </h1>
</div>

<div class="row">
  <div class="col-md-6">
    <h2 class="center">Content and Creations: <br><small>Blog posts, side projects, etc. <br> (1 point each)</small></h2>
    <hr>

    <ul>
      <% @content_achievements.each do |achievement| %>
        <%= render "modals/achievement_show", achievement: achievement %>

        <li>
          <a id="show-achievement-toggler" data-toggle="modal" data-target="#showAchievement-<%= achievement.id %>">
            <h3><%= achievement.title %><h3>
          </a>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="col-md-6">
    <h2 class="center">Community Contributions: <br><small>Conference talks, meetups organized, etc. <br> (2 points each)</small></h2>
    <hr>

    <ul>
      <% @community_achievements.each do |achievement| %>
        <%= render "modals/achievement_show", achievement: achievement %>

        <li>
          <a id="show-achievement-toggler" data-toggle="modal" data-target="#showAchievement-<%= achievement.id %>">
            <h3><%= achievement.title %><h3>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
